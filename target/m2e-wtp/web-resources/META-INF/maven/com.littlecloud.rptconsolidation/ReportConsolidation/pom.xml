<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.littlecloud.rptconsolidation</groupId>
  <artifactId>ReportConsolidation</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>war</packaging>
  <name>ReportConsolidation</name>
  	<build>
		<finalName>rptconsolidation</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<argLine>-Xmx1024m 
					-XX:MaxPermSize=256m
					-Ddb.properties=${LITTLECLOUD_ETC}/config/db.properties 
					-Ddb.support.properties=${LITTLECLOUD_ETC}/config/db.support.properties
					-Dlittlecloud.config=${LITTLECLOUD_ETC}/config/littlecloud.properties
					-Dcluster.config=${LITTLECLOUD_ETC}/config/cluster.xml
					-Djgroups.config=${LITTLECLOUD_ETC}/config/jgroups.xml
					-Dlucene.data.dir=${LITTLECLOUD_ETC}/search
					-Dmail.config=${LITTLECLOUD_ETC}/config/mail.properties
					-Dmail_check.config=${LITTLECLOUD_ETC}/config/mail_check_qz.properties
					-Dcheck_qz.config=${LITTLECLOUD_ETC}/config/check_qz.properties
					-Didle_qz.config=${LITTLECLOUD_ETC}/config/idle_qz.properties
					-Dupgrade_qz.config=${LITTLECLOUD_ETC}/config/upgrade_qz.properties
					-Dlittlecloud.timezones.config=${LITTLECLOUD_ETC}/config/timezones.properties
					-Dtimezones.max2ap.config=${LITTLECLOUD_ETC}/config/timezones_max2ap_map.properties
					-Darchive_qz.config=${LITTLECLOUD_ETC}/config/archive_qz.properties
					-Dconfig_update_qz.config=${LITTLECLOUD_ETC}/config/config_update_qz.properties
					-Dalert_check_qz.config=${LITTLECLOUD_ETC}/config/alert_check_qz.properties
					-Dcheck_upgrade_mail_qz.config=${LITTLECLOUD_ETC}/config/check_upgrade_mail_qz.properties
					-Dcheck_persist_cache_qz.config=${LITTLECLOUD_ETC}/config/check_persist_cache_qz.properties
					-Ddevice_firmware_update_qz.config=${LITTLECLOUD_ETC}/config/device_firmware_update_qz.properties
					-Dalertlist.config=${LITTLECLOUD_ETC}/config/alertlist.properties					
					</argLine>					
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			 <plugin>
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-war-plugin</artifactId>
			    <version>2.5</version>
			    <executions>
			      <execution>
			         <phase>package</phase>
			         <configuration>
			           <webXml>webapp/WEB-INF/web.xml</webXml>
			         </configuration>
			      </execution>			      
			    </executions>
			  </plugin>
	      <plugin>
	        <artifactId>maven-resources-plugin</artifactId>
	        <version>2.7</version>
	        <executions>
	          <execution>
	            <id>copy-pages</id>
	            <!-- here the phase you need -->
	            <phase>process-resources</phase>
	            <goals>
	              <goal>copy-resources</goal>
	            </goals>
	            <configuration>
	              <outputDirectory>${basedir}/target/rptconsolidation</outputDirectory>
	              <resources>          
	                <resource>
	                  <targetPath>${basedir}/target/rptconsolidation</targetPath>
	                  <directory>webapp</directory>
	                  <filtering>true</filtering>
	                </resource>
	              </resources>              
	            </configuration>            
	          </execution>
	          <!-- 
              <execution>
                  <id>copy-log4j-properties</id>
                  <phase>process-resources</phase>
                  <goals>
                      <goal>copy-resources</goal>
                  </goals>
                  <configuration>
                      <outputDirectory>${basedir}/target/rptconsolidation/WEB-INF/classes</outputDirectory>
                      <resources>
		                  <targetPath>${basedir}/target/rptconsolidation/WEB-INF/classes</targetPath>
		                  <directory>${basedir}/src/main/resources</directory>
		                  <filtering>true</filtering>
                      </resources>
                  </configuration>
              </execution>	      
               -->             
	        </executions>
	      </plugin>
		</plugins>
	</build>
	<repositories>
	 <repository>
	       <id>org.jboss.resteasy</id>
	  <url>http://repository.jboss.org/maven2/</url>
	 </repository>
	</repositories>
  	<dependencies>
        <dependency>
	        <groupId>org.slf4j</groupId>
	        <artifactId>slf4j-api</artifactId>
	        <version>1.4.3</version>
	    </dependency>
  	    <dependency>
	    	<groupId>org.slf4j</groupId>
	    	<artifactId>slf4j-log4j12</artifactId>
	    	<version>1.4.3</version>
	    </dependency>  	
		<dependency>
			<groupId>org.apache.tomcat</groupId>
			<artifactId>tomcat-jdbc</artifactId>
			<version>7.0.47</version>
		</dependency>
  		<dependency>
  			<groupId>junit</groupId>
  			<artifactId>junit</artifactId>
  			<version>4.11</version>
  			<scope>test</scope>
  		</dependency>
  		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.34</version>
		</dependency>
		<dependency>
			 <groupId>org.jboss.resteasy</groupId>
			 <artifactId>resteasy-jaxrs</artifactId>
			 <version>2.0-beta-2</version>
		</dependency>
		<dependency>
			 <groupId>org.jboss.resteasy</groupId>
			 <artifactId>resteasy-jaxb-provider</artifactId>
			 <version>2.0-beta-2</version>
		</dependency>
		<dependency>
		      <groupId>org.jboss.resteasy</groupId>
		      <artifactId>resteasy-jettison-provider</artifactId>
		      <version>2.0-beta-2</version>
		</dependency>
		<dependency>
			<groupId>org.jboss.logging</groupId>
			<artifactId>jboss-logging</artifactId>
			<version>3.2.0.Final</version>
		</dependency>	
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>javax.persistence</artifactId>
			<version>2.1.0</version>
		</dependency>			
	  	<dependency>
	  		<groupId>com.littlecloud</groupId>
	  		<artifactId>LittleCloudBase</artifactId>
	  		<version>2.0.23</version>
	  	</dependency>
		<dependency>
	  		<groupId>com.peplink.api</groupId>
	  		<artifactId>DbUtil</artifactId>
	  		<version>2.0.23</version>
	  	</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-io</artifactId>
			<version>1.3.2</version>
		</dependency>
		
  	</dependencies>
</project>